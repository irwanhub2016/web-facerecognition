extends ../layout/base_dosen 
block content         
        section.content-header
          h1
            | Dashboard
            small Dosen
          ol.breadcrumb
            li
              a(href='#')
                i.fa.fa-dashboard
                |  Home
            li.active Dashboard
        // Main content
        section.content
          // Small boxes (Stat box)
          .row
            .col-lg-3.col-xs-6
              .info-box
                span.info-box-icon.bg-purple
                  i.fa.fa-user
                .info-box-content
                  span.info-box-text Absensi Harian
                  span.info-box-number #{count_transaksiData}
                    small &nbsp; Mahasiswa
                // /.info-box-content
              // /.info-box
            // /.col
            .col-md-3.col-sm-6.col-xs-12
              .info-box
                span.info-box-icon.bg-green
                  i.fa.fa-user
                .info-box-content
                  span.info-box-text Rekaptulasi Absensi
                  span.info-box-number #{count_transaksiData}
                    small &nbsp; 
            .col-lg-3.col-xs-6
              //.info-box
                //span.info-box-icon.bg-yellow
                  //i.fa.fa-sun-o
                //.info-box-content
                  span.info-box-text Status Lampu
                  span.info-box-number #{data_lampu[0].status_lampu}

            .row
            .col-xs-12
              .box
                .box-header
                  h3.box-title Data Absensi Mahasiswa
                // /.box-header
                .box-body
                  table#example1.table.table-bordered.table-striped
                    thead
                      tr
                        th No
                        th NIM
                        th Tanggal Absen
                        th Jam Absen
                        th Matakuliah
                        th Aksi
                    for row in data_pengisian 
                        tr
                          td #{row.no}
                          td #{row.nim}
                          td #{row.tgl_absen}
                          td #{row.jam_absen}
                          td #{row.id_matkul}
                          td 
                            a(href='http://localhost:1234/depot') edit
                  a(href='/depot/Pengisian')
                    p Lihat selengkapnya

              .box
                .box-header
                  h3.box-title Data Rekaptulasi Mahasiswa
                // /.box-header
                .box-body
                  table#example1.table.table-bordered.table-striped
                    thead
                      tr
                        th No
                        th Date
                        th Time(WIB)
                        th Jenis Toren
                        th Ketinggian(cm)
                    for row2, index in data_toren 
                        tr
                          td #{index+1}
                          td #{row2.date}
                          td #{row2.time}
                          td #{row2.jenis_toren}
                          td #{row2.ketinggian}
                  a(href='/depot/tangki_air')
                    p Lihat selengkapnya                   